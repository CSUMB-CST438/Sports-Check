<p id="notice"><%= notice %></p>

<h1>Students for year <%= @year_number %></h1>
  <%= link_to "New Year", increase_years_url(@year_number) %>
<br>
  <h4>
    Go to certain years:
  </h4>
 <% current_user.school.years.all.each do | year | %>
    <%= link_to year.number, year%> 
  <% end %>
  <br>
  <br>
<% [1,2,3,4].each do |grade| %>
  
  <li>
    <%= link_to grade, years_show_path(id: @year,grade: grade) %>
  </li> 
<% end %>
<li>
    <%= link_to "All students", years_show_path(id: @year) %>
  </li> 
<table>
  <thead>
    <tr>
      <th colspan="6"></th>
    </tr>
  </thead>
  <tbody>
    <% @students.each do |student| %>
      <tr>
        <td><%= student.name %></td>
        <td><%= student.sport %></td>
        <td><%= student.school_year %></td>
        <td><%= link_to 'Show', student %></td>
        <td><%= link_to 'Edit', edit_student_path(student) %></td>
        <td><%= link_to 'Destroy', student, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Student', new_student_path %>
