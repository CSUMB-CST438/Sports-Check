<!DOCTYPE html>
<html>
  <head>
    <title>AthleteManager</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <% if current_user && logged_in? %>
      <%= link_to 'log out', controller: "users", action: "destroy" %>
      <br />
      <h2> <%= current_user.school.name %> </h2>
    <% end %>

    <%= yield %>
  </body>
</html>
